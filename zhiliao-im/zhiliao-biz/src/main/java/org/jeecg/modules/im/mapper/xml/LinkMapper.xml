<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.LinkMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.Link">
        <id column="id" property="id" />
        <result column="cover" property="cover" />
        <result column="href" property="href" />
        <result column="name" property="name" />
        <result column="order_no" property="orderNo" />
        <result column="is_use" property="isUse" />
        <result column="visible_tester" property="visibleTester" />
        <result column="visible_business" property="visibleBusiness" />
        <result column="visible_common" property="visibleCommon" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, cover, href, name, order_no, is_use, visible_tester, visible_business, visible_common
    </sql>

    <select id="pagination" resultMap="BaseResultMap">
        select * from im_link
        <where>1=1
            <if test="q.name!=null and q.name !=''">
                and name = #{q.name}
            </if>
            <if test="q.href!=null and q.href !=''">
                and href = #{q.href}
            </if>
            <if test="q.isUse!=null">
                and is_use = #{q.isUse}
            </if>
            <if test="q.visibleTester!=null">
                and visible_tester = #{q.visibleTester}
            </if>
            <if test="q.visibleBusiness!=null">
                and visible_business = #{q.visibleBusiness}
            </if>
            <if test="q.visibleCommon!=null">
                and visible_common = #{q.visibleCommon}
            </if>
            <if test="q.ts_create!=null">
                and ts_create &lt;= UNIX_TIMESTAMP(#{q.ts_create})*1000
            </if>
        </where>
        <if test="q.column !=null and q.column!='' and q.order!=null and q.order!=''">
            order by ${q.column} ${q.order}
        </if>
    </select>
    
</mapper>
