.j-cgform-tab-modal {
   .contentArea {
      padding: 20px 1.5% 0;
    }

     //.ant-modal-header {
     //  padding-top: 8px;
     //  padding-bottom: 8px;
     //  border-bottom: none !important;
     //}

  .ant-modal .ant-modal-body > .scrollbar,
  .ant-tabs-nav .ant-tabs-tab {
    padding-top: 0;
